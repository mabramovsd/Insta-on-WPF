<Page x:Class="InstaMilligram.GuestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstaMilligram"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GuestPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="120px"/>
        </Grid.ColumnDefinitions>

        
        <Image Source="Resources/Milligram.png" Grid.Column="0" Grid.Row="1" Stretch="Fill"/>

        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Vertical">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTB"/>
            <TextBlock Text="Пароль"/>
            <TextBox/>
            <Button Content="Войти" Margin="0,5,0,5" Click="Button_Click" Background="White"/>
            <Button Content="Регистрация" Background="White"/>
        </StackPanel>


    </Grid>
</Page>
