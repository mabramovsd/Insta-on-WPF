<Page x:Class="InstaMilligram.TapePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InstaMilligram"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" >

    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" x:Name="TapeData"  Grid.Row="0">
            <TextBlock x:Name="TapeText" Text="Лента публикаций"/>
        </StackPanel>
        
        <WrapPanel HorizontalAlignment="Right" Margin="3,3,3,3" VerticalAlignment="Top" Grid.Row="1">
            <ScrollViewer>
                <WrapPanel HorizontalAlignment="Stretch" x:Name="Fr"/>
            </ScrollViewer>
        </WrapPanel>
    </Grid>
</Page>
